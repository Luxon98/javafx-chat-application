<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="mainGridPane" alignment="center" prefHeight="600.0" prefWidth="600.0" vgap="10"
          xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="chatclient.LogInController">
    <children>
        <Pane fx:id="logInPane" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #eef0af;"
              GridPane.columnIndex="2">
            <children>
                <Label fx:id="loginTitleLabel" layoutX="240.0" layoutY="95.0" minHeight="30" minWidth="30"
                       style="-fx-font-size: 33;" text="Log In" textFill="#796b74">
                </Label>
                <Label fx:id="loginTextLabel" layoutX="70.0" layoutY="209.0" prefHeight="26.0" prefWidth="58.0"
                       style="-fx-font-size: 16;" text="Login:" textFill="#4f4ad3">
                </Label>
                <Label fx:id="passwordTextLabel" layoutX="70.0" layoutY="262.0" style="-fx-font-size: 16;"
                       text="Password:" textFill="#4f4ad3"/>
                <TextField fx:id="loginTextField" layoutX="205.0" layoutY="207.0" prefHeight="33.0" prefWidth="262.0"
                           style="-fx-font-size: 17;"/>
                <PasswordField fx:id="passwordTextField" layoutX="205.0" layoutY="256.0"
                               onKeyPressed="#handlePasswordFieldKey"
                               prefHeight="33.0" prefWidth="262.0" style="-fx-font-size: 17;"/>
                <Button fx:id="logInButton" layoutX="370.0" layoutY="318.0" mnemonicParsing="false" onAction="#logIn"
                        prefHeight="26.0" prefWidth="67.0"
                        style="-fx-background-color: #4a852e; -fx-font-size: 14; -fx-border-color: #3a3d39;"
                        text="Log In" textAlignment="CENTER" textFill="WHITE">
                    <effect>
                        <DropShadow height="71.09" radius="35.425" width="72.61"/>
                    </effect>
                </Button>
                <Button fx:id="newAccountButton" layoutX="125.0" layoutY="320.0" mnemonicParsing="false"
                        onAction="#setSignUpScene" style="-fx-background-color: #e89910; -fx-border-color: #3a3d39;"
                        text="Create New Account" textAlignment="CENTER">
                    <effect>
                        <InnerShadow/>
                    </effect>
                </Button>
            </children>
        </Pane>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
